<% if @errors.present? %>
  <% @errors.each do |error| %>
    <p><%= error[0] %></p>
  <% end %>
<% end %>

<%= form_for @customer do |f| %>
	<%= f.label :name, 'Nome' %>
	<%= f.text_field :name %>
	<%= f.label :cpf, 'CPF' %>
	<%= f.text_field :cpf %>
	<%= f.label :email, 'Email' %>
	<%= f.text_field :email %>
	<%= f.submit 'Enviar' %>
<% end %>

<%= link_to 'Voltar', customers_path %>